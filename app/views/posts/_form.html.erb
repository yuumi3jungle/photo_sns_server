<%= form_for(@post, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :caption, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
    <%= f.text_area :caption, size: "60x10", class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :photo, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
    <%= f.file_field :photo, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
    <%= f.submit "投稿", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
